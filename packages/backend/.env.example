DATABASE_URL="postgresql://username:password@localhost:5432/gym_api"
APP_ENV="development"
JWT_SECRET="your-secret-key"
PORT=3000
CORS_ORIGINS="http://localhost:5173,http://localhost:3000,http://localhost:3001"

# Superadmin Account (for seeding)
SUPERADMIN_EMAIL="superadmin@gym.com"
SUPERADMIN_PASSWORD="SuperAdmin123!"

# Logging Configuration
# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Log format: json, pretty
LOG_FORMAT=pretty

# Enable/disable colors in console output
LOG_COLORS=true

# Service name for log entries
SERVICE_NAME=gym-api

# Service version
SERVICE_VERSION=1.0.0

# Comma-separated list of additional sensitive fields
SENSITIVE_FIELDS=

# File Logging Configuration
# Enable/disable file logging
ENABLE_FILE_LOGGING=true

# Directory where log files will be stored
LOG_DIR=logs

# Base filename for logs (without extension)
LOG_FILENAME=app

# Maximum file size in bytes before rotation (default: 10485760 = 10MB)
LOG_MAX_FILE_SIZE=10485760

# Maximum number of log files to keep (default: 5)
LOG_MAX_FILES=5

# Whether to create separate files for each log level (true/false)
LOG_SEPARATE_BY_LEVEL=true
