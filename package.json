{
    "name": "gym-management-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "dev:backend": "pnpm --filter backend run dev",
        "dev:frontend": "pnpm --filter frontend run dev",
        "dev": "npx concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
        "build:backend": "pnpm --filter backend run build",
        "build:frontend": "pnpm --filter frontend run build",
        "build": "pnpm run build:backend && pnpm run build:frontend",
        "lint": "pnpm --filter backend run lint && pnpm --filter frontend run lint",
        "prisma:migrate": "pnpm --filter backend run prisma:migrate",
        "prisma:generate": "pnpm --filter backend run prisma:generate"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "dotenv": "^17.2.4",
        "pnpm": "^10.29.3",
        "prisma": "^7.4.0"
    }
}